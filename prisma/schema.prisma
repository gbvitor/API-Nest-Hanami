generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int       @default(autoincrement()) @id
  nome String?     
  login  String?  @unique 
  senha String?    
  posts Posts[]
}

model Posts {
  id        Int           @default(autoincrement()) @id
  titulo     String?       
  conteudo   Bytes?        
  dataPublicacao DateTime?   @default(now())
  autor    User?         @relation(fields: [autorId], references: [id])
  autorId  Int     
}